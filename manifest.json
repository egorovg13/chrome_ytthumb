{
    "manifest_version": 2,
    "name": "YT Thumbnail and Title Preview",
    "version": "0.1",
    "icons" : {"128" : "icon_128.png"},

    "content_scripts" : [
        {
          "matches": [
            "*://*.youtube.com/*",
            "*://*.youtube.co.uk/*"
          ],
          "js": ["content.js"]
        }
      ],

    "browser_action": {
        // "default_icon": "icon.png"
        "default_popup": "popup.html"
      },

    "background": {
        "scripts": ["background.js"]
      }

  }

  